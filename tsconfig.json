{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": ["es6", "es2019"],
    "esModuleInterop": true,
    "strict": true,
    "pretty": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "jsx": "react",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "lib": ["es2015"]
}